<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="chat_root" maxHeight="120.0" prefWidth="421.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ss.studysystem.controller.chat.ChatBoxCtrl">
   <children>
      <TextArea fx:id="user_input" maxHeight="100.0" minHeight="0.0" prefHeight="30.0" prefWidth="421.0" promptText="Message" wrapText="true" VBox.vgrow="ALWAYS" />
      <HBox>
         <children>
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
            <Pane prefHeight="0.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="send" mnemonicParsing="false" style="-fx-background-radius: 2em;" text="Send" />
         </children>
      </HBox>
   </children>
</VBox>
